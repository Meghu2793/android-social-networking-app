<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.com.hw07.UpdateProfileActivity">

    <EditText
        android:id="@+id/editTextUpdateFirstName"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:hint="First name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Last name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/editTextUpdateLastName"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        app:layout_constraintTop_toBottomOf="@+id/editTextUpdateFirstName"
        />

    <EditText
        android:id="@+id/birthdayUpdate"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Birthday"
        android:inputType="datetime"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:maxLines="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUpdateLastName"/>

    <EditText
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/editTextUpdatePwd1"
        android:inputType="textPassword"
        android:backgroundTint="@android:color/holo_blue_bright"
        app:layout_constraintTop_toBottomOf="@+id/birthdayUpdate"
        />

    <EditText
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/editTextUpdatePwd2"
        android:inputType="textPassword"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextUpdatePwd1"
        />

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="44dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUpdatePwd2"
        android:layout_marginStart="128dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="147dp"
        android:layout_height="127dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="116dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_icon"
        tools:layout_editor_absoluteX="116dp" />

</android.support.constraint.ConstraintLayout>
